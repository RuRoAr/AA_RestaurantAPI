<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListCocktail">
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/summary_cocktails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/list_cocktail" />

        <ListView
            android:id="@+id/cocktail_list"
            android:layout_width="match_parent"
            android:layout_height="600dp">

        </ListView>

        <Button
            android:id="@+id/addCocktail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:onClick="addCocktail"
            android:text="@string/new_cocktail" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>